<div class="container">
<div class="debut">
<h1>All flats (<%= @flats.count %>)</h1>
</div>
  <div class="cards">
  <% @flats.each do |f| %>
    <div class="card">
  <%= link_to flat_path(f) do %>
      <div class="img">
      </div>
      <div class="contenu">
        <div class="text">
          <h4><%= f.name %></h4>
          <p><%= f.address %></p>
        </div>
        <div class="price-guest">
          <div class="guest">
            <p><%= f.number_of_guests %> <i class="fas fa-user"></i></p>
          </div>
          <div class="price">
            <p><%= f.price_per_night %> <i class="fas fa-dollar-sign"></i></p>
          </div>
        </div>
    <% end %>
        <div class="edit-remove">
          <p class="edit"><%= link_to 'Edit', edit_flat_path(f) %></p>
          <p class="remove"><%= link_to "Delete", flat_path(f),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>